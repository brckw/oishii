<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightPink_template"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dish_layout"
        android:layout_marginTop="@dimen/very_small_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/dish_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dish_text_size"
            android:textStyle="bold"
            android:textColor="@color/red_Template"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="vegan ramen" />

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="0dp"
            android:textSize="@dimen/size_text_small"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/lightRed_template"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/price_textView"
            app:layout_constraintTop_toBottomOf="@id/dish_textView"
            tools:text="Fresh ramen noodles, tofu, scallions, shitake callions, shitake muscallions, shitake muscallions, shitake muscallions, shitake muscallions, shitake muscallions, shitake muscallions, shitake musmushrooms, leeks, bamboo shoots, pak choi in spicy dobanjiang soup." />

        <TextView
            android:id="@+id/allergies_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_template"
            android:textSize="@dimen/size_text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_textView"
            tools:text="allergens: hevete, soya, sesam, nÃ¸tter" />

        <TextView
            android:id="@+id/add_to_cart_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allergies_textView" />

        <TextView
            android:id="@+id/price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/red_Template"
            android:textSize="@dimen/size_text_small_medium"
            app:layout_constraintBottom_toBottomOf="@id/description_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/description_textView"
            tools:text="140kr" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>